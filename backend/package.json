{
  "name": "backend",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate && bun run src/db/migrate-trigger.ts",
    "db:studio": "drizzle-kit studio",
    "check": "bun run typecheck && bun run codecheck",
    "check:write": "bun run format && bun run pretty",
    "codecheck": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "eslint src --ext .ts --fix",
    "pretty": "prettier . --write",
    "seed": "bun run src/db/seed/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/zod-openapi": "^0.19.2",
    "@hono/zod-validator": "^0.4.3",
    "@scalar/hono-api-reference": "^0.7.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.7",
    "drizzle": "^1.4.0",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.5",
    "hono-openapi": "^0.4.6",
    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "uuid": "^11.1.0",
    "zod": "^3.24.2",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.8",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "drizzle-kit": "^0.27.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  }
}